<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/card_view_header"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_pic"
            android:contentDescription="default profile picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/icon" />

        <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_view_pic"
        android:layout_toEndOf="@id/image_view_pic"
        android:fontFamily="sans-serif-medium"
        android:text="Name"
        android:textSize="22sp" />

        <TextView
            android:id="@+id/text_view_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_name"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/image_view_pic"
            android:text="Level"
            android:textSize="18sp" />

    </RelativeLayout>


    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_header"
        android:orientation="vertical"
        android:layout_marginTop="100dp">



        <Button
            android:id="@+id/community_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="Community Page"
            android:textAlignment="viewStart"
            android:textColor="#4D98A1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_restore_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="0dp"
            android:textSize="14sp"
            android:textColor="#4D98A1"
            android:text="Onboard"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/go_to_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to my challenge"
            android:padding="0dp"
            android:textColor="#4D98A1"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            />


    </LinearLayout>
</RelativeLayout>